{
    "env": {
        "browser": true,
        "es2021": true,
        "webextensions": true
    },
    "extends": [
        "airbnb-base",
        "prettier",
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": ["prettier"],
    "rules":{
        "prettier/prettier": ["warn"],
        "one-var": ["off"],
        "no-unused-vars": "warn",
        "no-console": ["warn", { "allow": ["warn", "error"] }],
        "no-restricted-syntax": "warn",
        "func-names":"off",
        "no-param-reassign": "off",
        "no-use-before-define": "off"
    }
}
